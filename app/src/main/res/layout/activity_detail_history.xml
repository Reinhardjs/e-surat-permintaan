<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.DetailHistoryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTextBaru"
                android:text="Baru"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerViewBaru"
                app:layout_constraintTop_toBottomOf="@id/tvTextBaru"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:listitem="@layout/detail_history_item"/>
            
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnLampiranBaru"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewBaru"
                android:layout_marginTop="8dp"
                android:text="Lampiran 1"
                android:layout_marginHorizontal="16dp"
                android:textAllCaps="false"
                android:drawableLeft="@drawable/ic_file_download"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTextLama"
                android:text="Lama"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@+id/btnLampiranBaru"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerViewLama"
                app:layout_constraintTop_toBottomOf="@id/tvTextLama"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                tools:listitem="@layout/detail_history_item"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnLampiranLama"
                app:layout_constraintTop_toBottomOf="@id/recyclerViewLama"
                android:layout_marginTop="8dp"
                android:text="Lampiran 1"
                android:textAllCaps="false"
                android:layout_marginHorizontal="16dp"
                android:drawableLeft="@drawable/ic_file_download"
                app:layout_constraintLeft_toLeftOf="parent"/>

            
        </androidx.constraintlayout.widget.ConstraintLayout>
        
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>