<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_splash"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@android:drawable/ic_btn_speak_now"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:lineSpacingMultiplier="1.1"
            android:lineSpacingExtra="1dp"
            android:textSize="25sp"
            android:textColor="#1B2E41"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="E-Surat Pemerintah"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:lineSpacingMultiplier="1.1"
            android:lineSpacingExtra="1dp"
            android:textSize="18sp"
            android:textColor="#1B2E41"
            android:textStyle="normal"
            android:textAlignment="center"
            android:text="E-Surat Pemerintah"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/as_modal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:visibility="gone"
            android:text="Open modal" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_splash"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="italic"
        android:text="Bagian Protokol dan Komunikasi Pimpinan"/>

</RelativeLayout>