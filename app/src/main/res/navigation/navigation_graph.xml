<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.e_suratpermintaan.presentation.navigation.SplashFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashScreen_to_mainFragment"
            app:destination="@id/mainFragment" />
        <action
            android:id="@+id/action_splashScreen_to_welcomeScreen"
            app:destination="@id/welcomeFragment" />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.e_suratpermintaan.presentation.navigation.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_splashScreen"
            app:destination="@id/splashFragment" />
        <action
            android:id="@+id/action_mainFragment_to_detailSuratPermintaanFragment"
            app:destination="@id/detailSuratPermintaanFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.e_suratpermintaan.presentation.navigation.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.e_suratpermintaan.presentation.navigation.WelcomeFragment"
        android:label="fragment_welcome_screen"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeScreen_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailSuratPermintaanFragment"
        android:name="com.example.e_suratpermintaan.presentation.navigation.DetailSuratPermintaanFragment"
        android:label="fragment_detail_surat_permintaan"
        tools:layout="@layout/fragment_detail_surat_permintaan" >
        <argument
            android:name="id_sp"
            app:argType="string" />
    </fragment>

</navigation>